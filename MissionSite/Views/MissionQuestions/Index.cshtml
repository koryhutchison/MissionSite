@model IEnumerable<MissionSite.Models.MissionQuestions>

@{
    ViewBag.Title = "Index";
}


    <h2>Questions</h2>
    <br />

    <p>
        @Html.ActionLink("Create New", "Create", "MissionQuestions", new { @class = "btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MissionQuestionsID }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }

    </table>


