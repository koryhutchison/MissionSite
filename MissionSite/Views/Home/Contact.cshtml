@{
    ViewBag.Title = "Contact";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home", null, null)</li>
    <li class="active">Contact</li>
</ol>

<div class="jumbotron">
    <div class="container">
        <h1>Have a Question?</h1>
        <p class="lead">Feel free to contact us!</p>
    </div>
</div>


<div class="container-fluid">
    <div class="col-md-4">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-group" }))
        {
            <div class="row">
                <div class="col-md-12">
                    <h3>Name</h3>
                    @Html.TextBox("Name", "", new { @class = "form-control" })
                    <h3>Email</h3>
                    @Html.TextBox("Email", "", new { @class = "form-control" })
                    <h3>Subject</h3>
                    @Html.DropDownList("SubjectOptions", null, new { @class = "form-control" })
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <h3>Message</h3>
                    @Html.TextArea("Message", "", new { @class = "form-control text_message", rows = "6" })
                </div>
            </div>
            <br />
            <p>
                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
            </p>
        }
    </div>
    <div class="col-md-8" style="text-align: center">
        <iframe width="80%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https:///www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3045.075945108425!2d-111.65150428502238!3d40.251843479384576!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x874d90bc4aa0b68d%3A0xbf3eb3a3f30fdc4c!2sBrigham+Young+University!5e0!3m2!1sen!2sus!4v1477621290000" id="map_format"></iframe>
        <br />
        <br />
        <div class="well" style="width: 50%; display: block; margin: auto">
            <p>Email: contact@missionfacts.com</p>
            <p>Phone: (801) 555-5555</p>
        </div>
    </div>
</div>

<div class="container-fluid"></div>
 